<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="cck_field_live" version="2.5" method="upgrade">
	<name>plg_cck_field_live_author_data</name>
	<author>Octopoos</author>
	<authorEmail>contact@seblod.com</authorEmail>
	<authorUrl>http://www.seblod.com</authorUrl>
	<copyright>Copyright (C) 2013 SEBLOD. All Rights Reserved.</copyright>
	<license>GNU General Public License version 2 or later.</license>
	<creationDate>December 2014</creationDate>
	<description>SEBLOD 3.x - get data author article live. Email, username, name. Default Joomla user</description>
	<version>1.0.0</version>
	
	<scriptfile>install/script.php</scriptfile>
	
	<files>
		<folder>assets</folder>
		<folder>install</folder>
		<folder>tmpl</folder>
		
		<filename plugin="author_data">author_data.php</filename>
		<filename>index.html</filename>
	</files>
	
	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.plg_cck_field_live_author_data.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_cck_field_live_author_data.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params" addfieldpath="/libraries/cck/construction/field">
			<fieldset name="basic">
				<field name="" type="spacer" hr="false" />
			</fieldset>
			
			<fieldset name="advanced">
				<field name="group" type="text" default="PLG_CCK_FIELD_LIVE_GROUP_USER" label="LIB_CCK_GROUP_LABEL" size="60" description="LIB_CCK_FIELD_LIVE_GROUP_DESC" />
				<field name="export" type="cckexport" default="" label="LIB_CCK_EXPORT_LABEL" description="LIB_CCK_FIELD_LIVE_EXPORT_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>